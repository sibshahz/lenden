{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "lib": ["ES2020"],
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": false,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
